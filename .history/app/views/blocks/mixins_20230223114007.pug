mixin storyItem(src= "../images/img-blog1.png", dateNumber= 15, dateText= "Jan",title= "Lorem ipsum dolor sit amet consectetur adipisicing elit", desc= "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Dolorum nulla amet reprehenderit sed, perspiciatis magni at ad iusto vitae nam, possimus iure maiores repellendus. Ipsa et in perferendis facere vitae.",view= 542,comment= 17) 
	li.story-item 
		.story-media 
			img.story-image(src= src, alt="")
			.story-date 
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc.text
			p.story-desc-inner= desc

		.story-meta 
			.story-meta-item 
				i.fa.fa-eye.story-meta-icon 
				span.story-meta-number.text= view
			.story-meta-item 
				i.fa.fa-comment.story-meta-icon 
				span.story-meta-number.text= comment

